%p#notice= notice
%h1 Members
%table
  %thead
    %tr
      %th Email
      %th Org
      %th Roles
      %th{:colspan => "3"}
  %tbody
    - @members.each do |member|
      %tr
        %td= member.email
        %td= member.org.name
        %td= member.roles
        %td= link_to 'Show', org_member_path(member.org, member)
        %td= link_to 'Edit', org_member_path(member.org, member), action: 'edit'
        %td= link_to 'Destroy', org_member_path(member.org, member), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Member', new_org_member_path
