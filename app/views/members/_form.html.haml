= form_for [@org, @member] do |f|
  - if member.errors.any?
    #error_explanation
      %h2
        = pluralize(member.errors.count, "error")
        prohibited this member from being saved:
      %ul
        - member.errors.full_messages.each do |message|
          %li= message
  = f.hidden_field :org_id, value: @org.id
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :roles
    = f.text_area :roles
  .actions
    = f.submit
