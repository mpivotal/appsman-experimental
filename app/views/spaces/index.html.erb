<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Org</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.name %></td>
        <td><%= space.org.name %></td>
        <td><%= link_to 'Show', org_space_path(space.org, space) %></td>
        <td><%= link_to 'Edit', url_for([:edit, space.org, space]) %></td>
        <td><%= link_to 'Destroy', org_space_path(space.org, space), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Space', new_org_space_path %>
